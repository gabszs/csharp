@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar Contatos";
}


<div class="text-center">
    <div class="text-start col-md-5">
        <form asp-controller="Contato" asp-action="Criar" method="post">

            <div class="form-group">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato" >
                @Html.ValidationMessageFor(x => x.Name)
                <br />
            </div>
            
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" required asp-for="Email" class="form-control" placeholder="Digite o email do contato">
                @Html.ValidationMessageFor(x => x.Email)
                <br />
            </div>
            
            <div class="form-group">
                <label for="celular" class="form-label">Celular</label>
                <input type="tel" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato" pattern="\([1-9]{2}\) [2-9][0-9]{3,4}\-[0-9]{4}" required>
                @Html.ValidationMessageFor(x => x.Celular)
                <br />
            </div>


            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
        </form>
    </div>
</div>
