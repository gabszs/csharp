@model List<ASPNETMVCCRUD.Models.Domain.Employee>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-2" role="alert">
        @TempData["MensagemSucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MessagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MessagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensagemNull"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["MessagemErro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="align-content-center">
    <h1>Employess</h1>

    <table class="table table-striped table-hover border-1">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Departament</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    <td>@employee.Department</td>
                    <td><a asp-route-id="@employee.Id" asp-controller="Employees" asp-action="View" type="button" class="btn btn-dark">View</a></td>
                </tr>
            }



            </tbody>
    </table>
</div>
